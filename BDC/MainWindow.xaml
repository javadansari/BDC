<Window x:Class="BDC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDC" 
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <sys:Double x:Key="sizeBox">40</sys:Double>
        <sys:Double x:Key="margin">2</sys:Double>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition  Height="20"/>
        </Grid.RowDefinitions>
        <ToolBarTray Name="toolbarMenu" Grid.Row="1" Orientation="Vertical">
            <ToolBar >
                <Button Name="ecoButton" Click="item_Click" Tag="eco" PreviewMouseLeftButtonDown="SourceButton_PreviewMouseLeftButtonDown">
                    <Image Source="/economizer.png" Width="24" Height="24"/>
                </Button>
                <Button Name="evaButton" Click="item_Click" Tag="eva" PreviewMouseLeftButtonDown="SourceButton_PreviewMouseLeftButtonDown">
                    <Image Source="/evaporator.png" Width="24" Height="24" />
                </Button>
                <Button  Name="shButton" Click="item_Click" Tag="sh" PreviewMouseLeftButtonDown="SourceButton_PreviewMouseLeftButtonDown">
                    <Image Source="/superheater.png" Width="24" Height="24" />
                </Button>
                <Button  Name="lineButton" Tag="line" Click="lineButton_Click">
                    <Image Width="24" Height="24" Source="/SmokeRelation.png" />
                </Button>
               
            </ToolBar>
        </ToolBarTray>


        <Canvas Name="canvas" Grid.Row="1" Grid.Column="1" >

            <Button Name="levelButton1" Tag="1"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="118" Canvas.Top="162"/>
            <Button Name="levelButton2" Tag="2"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="192" Canvas.Top="162"/>
            <Button Name="levelButton3" Tag="3"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="257" Canvas.Top="162"/>
            <Button Name="levelButton4" Tag="4"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="335" Canvas.Top="162"/>
            <Button Name="levelButton5" Tag="5"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="396" Canvas.Top="162"/>
            <Button Name="levelButton6" Tag="6"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="468" Canvas.Top="162"/>
            <Button Name="levelButton7" Tag="7"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="540" Canvas.Top="162"/>
            <Button Name="levelButton8" Tag="8"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="610" Canvas.Top="162"/>
            <Button Name="levelButton9" Tag="9"  Width="{StaticResource sizeBox}" Height="{StaticResource sizeBox}" Click="levelButton_Click" Drop="TargetButton_Drop" AllowDrop="True" Canvas.Left="674" Canvas.Top="162"/>


        </Canvas>
        <TextBlock Name="reportText" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Text="Application"/>

    </Grid>
</Window>
