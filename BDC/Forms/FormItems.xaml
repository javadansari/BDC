<Window x:Class="BDC.Forms.FormItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDC.Forms"
        mc:Ignorable="d"
        Title="FormItems" Height="450" Width="800">
    <Grid>
        <ListView Name="listView" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="id" Width="100" DisplayMemberBinding="{Binding id}" />
                    <GridViewColumn Header="exist" Width="100" DisplayMemberBinding="{Binding exist}" />
                    <GridViewColumn Header="name" Width="100" DisplayMemberBinding="{Binding name}" />
                    <GridViewColumn Header="connection" Width="100" DisplayMemberBinding="{Binding connection}" />
                    <GridViewColumn Header="pathName" Width="100" DisplayMemberBinding="{Binding pathName}" />
                    <GridViewColumn Header="state" Width="100" DisplayMemberBinding="{Binding state}" />
                    <GridViewColumn Header="stateNumber" Width="100" DisplayMemberBinding="{Binding stateNumber}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
