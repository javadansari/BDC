<Window x:Class="BDC.Forms.FormAttributes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BDC.Forms"
        Title="FormAttributes" Height="450" Width="800">
    <Grid>
        <DataGrid Name="dataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Property Name" Binding="{Binding PropertyName}" />
                <!-- Add similar DataGridTextColumn elements for other properties -->
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
