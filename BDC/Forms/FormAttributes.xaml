<Window x:Class="BDC.Forms.FormAttributes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BDC.Forms"
        Title="FormAttributes" Height="450" Width="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ScrollViewer Name="c_dataGridScrollViewer"
              Loaded="c_dataGridScrollViewer_Loaded"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto">
            <DataGrid x:Name="c_dataGrid"
    HorizontalAlignment="Left"
    VerticalAlignment="Top"
    AutoGeneratedColumns="c_dataGrid_AutoGeneratedColumns"
    HorizontalScrollBarVisibility="Hidden"
    VerticalScrollBarVisibility="Hidden"
    SelectionUnit="Cell"
    CanUserAddRows="False"
    CanUserResizeColumns="False"
    CanUserReorderColumns="False"
    ColumnWidth="30" 
    RowHeight="100">
                <DataGrid.Columns>
                    <!-- Read-only column -->
                    <DataGridTextColumn Header="stage" Width="*"  Binding="{Binding stage}" IsReadOnly="True" />

                    <!-- Editable column -->
                    <DataGridTextColumn Header="loadCase"  Width="*" Binding="{Binding loadCase}" IsReadOnly="False" />


                    <DataGridComboBoxColumn Header="Choose an Option"  Width="*" SelectedValueBinding="{Binding ChosenOption}" x:Name="comboBoxColumn">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <RotateTransform Angle="90" />
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <RotateTransform Angle="90" />
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <TransformGroup>
                                    <RotateTransform Angle="90"/>
                                </TransformGroup>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.LayoutTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-90"/>
                    </TransformGroup>
                </DataGrid.LayoutTransform>
            </DataGrid>
        </ScrollViewer>
    </ScrollViewer>
</Window>
