        <Label Grid.Column="2" Grid.Row="11" Grid.ColumnSpan="2" Content="Input Data" FontSize="{StaticResource LabelFontSize}" Background="Yellow"></Label>

        <Label Grid.Column="2" Grid.Row="2" Content="a" FontSize="{StaticResource LabelFontSize}"/>
        <Label Grid.Column="2" Grid.Row="3" Content="b" FontSize="{StaticResource LabelFontSize}"/>
        <Label Grid.Column="2" Grid.Row="4" Content="L" FontSize="{StaticResource LabelFontSize}"/>
