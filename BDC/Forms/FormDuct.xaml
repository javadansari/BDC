        <Image Grid.Column="1" Grid.Row="11" Grid.RowSpan="5" Source="../Images/Duct/Image3.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" StretchDirection="Both"/>

        <Label Grid.Column="0" Grid.Row="3" Grid.RowSpan="2" Content="1"></Label>
        <Label Grid.Column="0" Grid.Row="7" Grid.RowSpan="2" Content="2"></Label>
        <Label Grid.Column="0" Grid.Row="13" Grid.RowSpan="2" Content="3"></Label>

